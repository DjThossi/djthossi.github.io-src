{% extends "german.html.twig" %}

{% set layoutAddCss = ['/assets/css/pages/blog.css'] %}

{% block contentWrapper %}
<div class="container content blog-page blog-item">

    <!--=== Content Part ===-->
    {% include 'blog/post/no_headline.html.twig'
        with {
            'defaultImageSrc': '/assets/img/blog/2017-asia-oz/headline.jpg',
            'defaultImageAlt': 'Standardbanner f&uuml;r die Headline des Reiseblogs.'
        }
    %}
    <!--=== End Content Part ===-->

    {% include 'blog/snippet/post_pagination.html.twig'
        with {
            'next': page.next_familie,
            'previous': page.previous_familie,
            'showNext': page.pagination.next,
            'showPrevious': page.pagination.previous,
            'nextPostLinkText': 'N&auml;chster<span class="hidden-xs"> Beitrag</span>',
            'previousPostLinkText': 'Vorheriger <span class="hidden-xs"> Beitrag</span>',
        }
    %}

</div><!--/container-->
{% endblock %}
