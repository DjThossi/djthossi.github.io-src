{% extends "default.html.twig" %}

{% set metaDescription = "My private website to show family and friends what I'm up to right now" %}
{% set metaKeywords = ['Developer', 'Team', 'Lead', 'Trainer', 'Scuba', 'Diver', 'Talks', 'Sessions'] %}
{% set cookieConsentMessage = "This website uses Cookies in order to optimize on-page experience." %}
{% set cookieConsentDismiss = "Thank you" %}

{% block layout %}
<!--=== Header v6 ===-->
<div class="header-v6 header-classic-white header-sticky">
    <!-- Navbar -->
    <div class="navbar mega-menu" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="menu-container">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <!-- Navbar Brand -->
                <div class="navbar-brand">
                    <p>
                        Sebastian Thoss
                    </p>
                </div>
                <!-- ENd Navbar Brand -->
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-responsive-collapse">
                <div class="menu-container">
                    <ul class="nav navbar-nav">
                        <!-- Homepage -->
                        <li class="{% if page.active_nav == 'home' %}active{% endif %}">
                            <a href="{{ site.url }}/en/">
                                Home
                            </a>
                        </li>

                        <!-- Tech blog -->
                        <li class="{% if page.active_nav == 'tech-blog' %}active{% endif %}">
                            <a href="{{ site.url }}/en/tech-blog/">
                                Tech Blog
                            </a>
                        </li>

                        <!-- Talks -->
                        <li class="dropdown{% if page.active_nav starts with 'talks-' %} active{% endif %}">
                            <a href="{{ site.url }}/en/talks/" class="dropdown-toggle" data-toggle="dropdown">
                               Talks
                            </a>
                            <ul class="dropdown-menu">
                                <li class="{% if page.active_nav == 'talks-index' %}active{% endif %}"><a href="{{ site.url }}/en/talks/"><i class="fa fa-angle-double-right"></i>Overview</a></li>

                                {% for talk in site.talks.en %}
                                    {% set titleLength = talk.title |length %}
                                    <li class="{% if page.active_nav == talk.active_nav %}active{% endif %}"><a href="{{ talk.link }}"><i class="fa fa-angle-double-right"></i>{{ talk.title }}{% if titleLength < 4 %} - {{ talk.subtitle }}{% endif %}</a></li>
                                {% endfor %}
                            </ul>
                        </li>

                        <!-- Contact -->
                        <li class="{% if page.active_nav == 'contact' %}active{% endif %}">
                            <a href="{{ site.url }}/en/contact/">
                                Contact me
                            </a>
                        </li>

                        <!-- Deutsche Version -->
                        <li>
                            <a href="{{ site.url }}/de/">
                                <i class="fa fa-globe"></i> Deutsche Version
                            </a>
                        </li>
                    </ul>
                </div>
            </div><!--/navbar-collapse-->
        </div>
    </div>
    <!-- End Navbar -->
</div>
<!--=== End Header v6 ===-->

{% block contentWrapper %}
    {{ page.blocks.content|raw }}
{% endblock %}

<!--=== Footer v2 ===-->
<div id="footer-v2" class="footer-v2">
    <div class="footer">
        <div class="container">
            <div class="row">
                <!-- Photo -->
                <div class="col-md-3 col-sm-6">
                    <img id="logo-footer" src="{{ site.url }}/assets/img/sebastian_thoss.jpg" alt="picture of myself">
                </div>
                <!-- End Photo -->

                <!-- About -->
                <div class="col-md-3 col-sm-6 md-margin-bottom-60">
                    <div class="latest-tweets">
                        <div class="headline"><h2 class="heading-sm">About Sebastian Thoss</h2></div>
                        <div class="latest-tweets-inner">
                            <p>
                                I'm in IT since mid of nineties and still love it. After several years of living and working in Ireland and Australia.
                                I came back to Hamburg, Germany in order to learn even more about architecture of software.
                            </p>
                            <p>
                                Since April 2015 I'm at kartenmacherei responsible for backend projects, the team and training of our young apprentice.
                            </p>
                        </div>
                    </div>
                </div>
                <!-- End About -->

                <!-- Address -->
                <div class="col-md-3 col-sm-6 md-margin-bottom-40">
                    <div class="headline"><h2 class="heading-sm">Contact details</h2></div>
                    <address class="md-margin-bottom-40">
                        <i class="fa fa-male"></i>Sebastian Thoss <br />
                        <i class="fa fa-home"></i>Ahrensburg, Germany <br />
                        <i class="fa fa-skype"></i>Skype: sebastian301082 <br />
                        <i class="fa fa-globe"></i>Website: <a href="http://www.sebastianthoss.de/en/">sebastianthoss.de</a> <br />
                        <i class="fa fa-envelope"></i>Mail: <a href="mailto:thoss_sebastian@web.de">thoss_sebastian@web.de</a>
                    </address>

                    <!-- Social Links -->
                    <ul class="social-icons">
                        <li>
                            <a target="_blank" href="https://www.xing.com/profile/Sebastian_Thoss" data-original-title="XING" class="rounded-x social_xing" title="Sebastian Thoss auf Xing"></a>
                        </li>
                        <li>
                            <a target="_blank" href="https://github.com/DjThossi" data-original-title="GitHub" class="rounded-x social_github" title="Sebastian Thoss auf GitHub"></a>
                        </li>
                        <li>
                            <a target="_blank" href="https://www.facebook.com/sebastian.thoss" data-original-title="Facebook" class="rounded-x social_facebook" title="Sebastian Thoss auf Facebook"></a>
                        </li>
                        <li>
                            <a target="_blank" href="https://twitter.com/dj_thossi" data-original-title="Twitter" class="rounded-x social_twitter" title="Sebastian Thoss auf Twitter"></a>
                        </li>
                        <li>
                            <a target="_blank" href="https://sebastian301082.wordpress.com/" data-original-title="WordPress" class="rounded-x social_wordpress" title="Sebastian Thoss auf WordPress"></a>
                        </li>
                    </ul>
                    <!-- End Social Links -->
                </div>
                <!-- End Address -->

                <!-- Termine -->
                <div class="col-md-3 col-sm-6 md-margin-bottom-40">
                    <div class="headline"><h2 class="heading-sm">Meet me</h2></div>
                    <ul class="list-unstyled link-news">
                        {% for meeting in site.meetings|slice(0, 3) %}
                            <li>
                                <a target="_blank" href="{{ meeting.link.url }}">{{ meeting.link.text }}</a>
                                <small>{{ meeting.date|date('d F Y') }}</small>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
                <!-- End Termine -->
            </div>
        </div>
    </div><!--/footer-->

</div>
<!--=== End Footer v2 ===-->

{% endblock %}