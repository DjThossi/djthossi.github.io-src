<div class="container content blog-page blog-item">
    <!--Blog Post-->
    <div class="blog margin-bottom-40">
        <div class="blog-img">
            {% if page.headline.image.url %}
                <img class="img-responsive" src="{{ site.url }}{{ page.headline.image.url }}" alt="{{ page.headline.image.alt }}">
            {% else %}
                <img class="img-responsive" src="{{ site.url }}{{ defaultImageSrc }}" alt="{{ defaultImageAlt }}">
            {% endif %}
        </div>

        <div class="headline">
            <h2>{{ page.title|raw }}</h2>
        </div>

        <div class="blog-post-tags">
            <ul class="list-unstyled list-inline blog-info">
                <li><i class="fa fa-calendar"></i> {{ page.date|date('d F Y') }}</li>
                <li><i class="fa fa-globe"></i>
                    {% for location in page.locations %}
                        {% if loop.last == false %}
                            {{ location }},
                        {% else %}
                            {{ location }}
                        {% endif %}
                    {% endfor %}
                </li>
            </ul>
        </div>

        {{ page.blocks.content|raw }}
    </div>
    <!--End Blog Post-->

</div><!--/container-->