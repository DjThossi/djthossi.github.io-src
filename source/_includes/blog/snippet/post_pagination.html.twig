{% if (next or previous) and (next and showNext) or (previous and showPrevious) %}
    <div class="row margin-bottom-30">
        <div class="col-sm-10 col-sm-offset-1">
            <ul class="pager pager-v3 pager-md no-margin">
                {% if next and showNext %}
                    <li class="previous"><a title="{{ next.title }}" href="{{ site.url }}{{ next.permalink.relativeUrlPath }}">« {{ nextPostLinkText|raw }}</a></li>
                {% endif %}

                {% if previous and showPrevious %}
                    <li class="next"><a title="{{ previous.title }}" href="{{ site.url }}{{ previous.permalink.relativeUrlPath }}">{{ previousPostLinkText|raw }} »</a></li>
                {% endif %}
            </ul>
        </div>
    </div>
{% endif %}