<div class="row margin-bottom-30">
    <div class="col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1">
        <ul class="pager pager-v3 pager-md no-margin">
            {% if page.next_familie %}
                <li class="previous"><a title="{{ page.next_familie.title }}" href="{{ site.url }}{{ page.next_familie.permalink.relativeUrlPath }}">« {{ nextPostLinkText|raw }}</a></li>
            {% endif %}

            {% if page.previous_familie %}
                <li class="next"><a title="{{ page.previous_familie.title }}" href="{{ site.url }}{{ page.previous_familie.permalink.relativeUrlPath }}">{{ previousPostLinkText|raw }} »</a></li>
            {% endif %}
        </ul>
    </div>
</div>