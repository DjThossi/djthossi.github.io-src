<div class="row margin-bottom-30">
    <div class="col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
        <ul class="pager pager-v3 pager-md no-margin">
            {% if pagination.previous_page %}
                <li class="previous"><a href="{{ site.url }}{{ pagination.previous_page.url }}/">« Neuer<span class="hidden-xs"> Beitr&auml;ge</span></a></li>
            {% endif %}

            <li class="page-amount">{{ pagination.page }} von {{ pagination.total_pages }}</li>

            {% if pagination.next_page %}
                <li class="next"><a href="{{ site.url }}{{ pagination.next_page.url }}/">&Auml;ltere<span class="hidden-xs"> Beitr&auml;ge</span> »</a></li>
            {% endif %}
        </ul>
    </div>
</div>